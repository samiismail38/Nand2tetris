/**
 * 16-bit multiplexor: 
 * out[i] = ((sel == 0), a[i], b[i]) for i = 0..15
 */
CHIP Mux16 {
    IN a[16], b[16], sel;
    OUT out[16];

    PARTS:

    Not16(in=sel, out=notsel);
    And16(a=notsel, b=a, out=nsvast);
    And16(a=sel, b=b, out=svast);
    Or16(a=nsvast, b=svast, out=out);
}
